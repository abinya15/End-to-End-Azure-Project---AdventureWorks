----
--CREATE CALENDAR VIEW
-------
CREATE VIEW gold.calendar
AS
SELECT *
FROM OPENROWSET(
        BULK 'https://pp1advworkds.dfs.core.windows.net/silver/calendar',
        FORMAT = 'parquet'
) as calenderquery

